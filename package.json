{
  "private": true,
  "scripts": {
    "lint": "xo",
    "lint-fix": "xo --fix",
    "build": "webpack --mode=production",
    "watch": "webpack --mode=development --watch",
    "watch:firefox": "web-ext run --source-dir=dist",
    "version": "dot-json dist/manifest.json version $VER",
    "release": "VER=$(daily-version) npm-run-all build version create-git-tag",
    "create-git-tag": "git tag $VER -m $VER && git push origin $VER"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^5.0.0",
    "daily-version": "^0.12.0",
    "dot-json": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "size-plugin": "^1.1.2",
    "terser-webpack-plugin": "^1.2.3",
    "web-ext": "^3.0.0",
    "web-ext-submit": "^2.9.3",
    "webextension-polyfill": "^0.4.0",
    "webpack": "^4.29.4",
    "webpack-cli": "^3.2.3",
    "xo": "^0.24.0"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "globals": [
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "import/no-named-as-default": 0,
      "no-script-url": 0,
      "brace-style": 0
    }
  }
}
